<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resources"

    android:background="@color/red">

    <!--TODO menu-->

    <TextView
        android:id="@+id/resourcesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resources"
        android:textSize="50dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias=".2"
        />

    <!--TODO button picture-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/safeWalkButton"
        app:cornerRadius="24dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Safe Walk"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias=".15"
        app:layout_constraintVertical_bias=".4"
        android:onClick="safeWalkClick"
        />

    <!--TODO button picture-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/uhsButton"
        app:cornerRadius="24dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="UHS"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias=".85"
        app:layout_constraintVertical_bias=".4"
        android:onClick="uhsClick"
        />

    <!--TODO button picture-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/librariesButton"
        app:cornerRadius="24dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Libraries"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias=".15"
        app:layout_constraintVertical_bias=".7"
        android:onClick="librariesClick"
        />

    <!--TODO button picture-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/techHelpButton"
        app:cornerRadius="24dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Tech Help"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias=".85"
        app:layout_constraintVertical_bias=".7"
        android:onClick="techHelpClick"
        />

    <!--TODO button picture-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/employmentButton"
        app:cornerRadius="24dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Employment"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1"
        android:onClick="employmentClick"
        />

</androidx.constraintlayout.widget.ConstraintLayout>