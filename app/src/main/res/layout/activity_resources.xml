<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"

    tools:context=".Resources">

    <!--TODO menu-->

    <TextView
        android:id="@+id/resourcesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resources"
        android:textColor="@color/mainText"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".1" />

    <!--TODO button picture-->
    <Button
        android:id="@+id/safeWalkButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:backgroundTint="@color/mainText"
        android:drawableTop="@drawable/safe_walk"
        android:drawableTint="@color/btnDark"
        android:drawablePadding="30dp"
        android:onClick="safeWalkClick"
        android:text="Safe Walk"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias=".125"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".3" />

    <!--TODO button picture-->
    <Button
        android:id="@+id/uhsButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:backgroundTint="@color/mainText"
        android:drawableTop="@drawable/uhs"
        android:drawableTint="@color/btnDark"
        android:drawablePadding="30dp"
        android:onClick="uhsClick"
        android:text="UHS"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias=".875"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".3" />

    <!--TODO button picture-->
    <Button
        android:id="@+id/librariesButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:backgroundTint="@color/mainText"
        android:drawableTop="@drawable/libraries"
        android:drawableTint="@color/btnDark"
        android:drawablePadding="30dp"
        android:onClick="librariesClick"
        android:text="Libraries"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias=".125"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".65" />

    <!--TODO button picture-->
    <Button
        android:id="@+id/techHelpButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:backgroundTint="@color/mainText"
        android:drawableTop="@drawable/tech_help"
        android:drawableTint="@color/btnDark"
        android:drawablePadding="30dp"
        android:onClick="techHelpClick"
        android:text="Tech Help"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias=".875"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".65" />

    <!--TODO button picture-->
    <Button
        android:id="@+id/employmentButton"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:backgroundTint="@color/mainText"
        android:drawableTop="@drawable/employment"
        android:drawableTint="@color/btnDark"
        android:drawablePadding="30dp"
        android:onClick="employmentClick"
        android:text="Employment"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>